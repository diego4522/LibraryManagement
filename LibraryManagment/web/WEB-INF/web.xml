<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>MyServlet</servlet-name>
        <servlet-class>org.spokentutorial.MyServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GreetingServlet</servlet-name>
        <servlet-class>org.spokentutorial.GreetingServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminSection</servlet-name>
        <servlet-class>org.spokentutorial.AdminSection</servlet-class>
    </servlet>    
    <servlet>
        <servlet-name>CheckOutServlet</servlet-name>
        <servlet-class>org.spokentutorial.CheckOutServlet</servlet-class>
    </servlet>        
    <servlet-mapping>
        <servlet-name>MyServlet</servlet-name>
        <url-pattern>/MyServletPath</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GreetingServlet</servlet-name>
        <url-pattern>/GreetingServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminSection</servlet-name>
        <url-pattern>/AdminSection</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CheckOutServlet</servlet-name>
        <url-pattern>/CheckOutServlet</url-pattern>
    </servlet-mapping>        
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
